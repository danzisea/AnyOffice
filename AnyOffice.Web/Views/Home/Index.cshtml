@using Quaider.Component.Html
@{
    ViewBag.Title = "Index";
}
@(
 Html.EasyUi().Grid("myGrid").Paged()
    .Sort("Id").Width(600).Height(310)
    .OrderBy()
    .Url("/Home/TestData")
    .Columns(c =>
    {
        c.Field("Id").Title("标识符").Width(100).Sortable();
        c.Field("FullName").Title("姓名").Width(200).Sortable();
        c.Field("UserName").Title("用户名").Width(200).Sortable();
    })
)
